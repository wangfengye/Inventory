<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ascend.wangfeng.inventory.DetailActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        tools:text="华为Mate9"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        tools:text="$18.00"
        android:textColor="@android:color/holo_orange_dark"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"/>

    <TextView
        android:id="@+id/count_sold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="已售:22"
        android:layout_marginTop="72dp"
        app:layout_constraintTop_toBottomOf="@+id/title"
        android:layout_marginLeft="72dp"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/count_inventory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="库存:2233"
        android:layout_marginRight="72dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="72dp"
        app:layout_constraintTop_toBottomOf="@+id/title"/>

    <Button
        android:id="@+id/sold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sold"
        android:layout_marginTop="72dp"
        app:layout_constraintTop_toBottomOf="@+id/count_sold"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/count_sold"/>

    <Button
        android:id="@+id/add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="72dp"
        android:text="@string/inventory_add"
        app:layout_constraintLeft_toLeftOf="@+id/count_inventory"
        app:layout_constraintTop_toBottomOf="@+id/count_inventory"/>

    <Button
        android:id="@+id/clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/clear_product"
        android:layout_marginTop="72dp"
        app:layout_constraintTop_toBottomOf="@+id/sold"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/sold"/>

    <Button
        android:id="@+id/connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/connect"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/add"
        android:layout_marginTop="72dp"
        app:layout_constraintTop_toBottomOf="@+id/add"
        />

</android.support.constraint.ConstraintLayout>
